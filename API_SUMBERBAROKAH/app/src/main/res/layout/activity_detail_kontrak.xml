<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DataTransaksi.Kontrak.DetailKontrakActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_kontrak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/padding5"
                android:layout_margin="@dimen/padding10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_idKontrak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/mr"
                        android:text="KO01"
                        android:layout_margin="@dimen/padding5"
                        android:textColor="@color/mediumBlue"
                        android:textSize="@dimen/sizeTxt16"/>

                    <View style="@style/Divider"/>

                    <!--Cardview data Tender-->
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="@dimen/padding5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/padding5"
                                    android:fontFamily="@font/mm"
                                    android:text="Nama Customer"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sizeTxt16" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/padding5"
                                    android:fontFamily="@font/mm"
                                    android:text="Alamat Customer"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sizeTxt16" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_namaCustomer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/padding5"
                                    android:fontFamily="@font/mm"
                                    android:text="budi"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sizeTxt16" />

                                <TextView
                                    android:id="@+id/tv_alamat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/padding5"
                                    android:fontFamily="@font/mm"
                                    android:text="larangan"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sizeTxt16" />
                            </LinearLayout>


                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <!--cardview dataTender selesai-->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding5"
                        android:fontFamily="@font/mm"
                        android:gravity="center"
                        android:text="Tender Note"
                        android:textColor="@color/mediumBlue"
                        android:textSize="@dimen/sizeTxt16" />

                    <TextView
                        android:id="@+id/tv_alamatCustomer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:fontFamily="@font/mm"
                        android:text="Alamat Customer"
                        android:textColor="@color/mediumBlue"
                        android:layout_margin="@dimen/padding5"
                        android:textSize="@dimen/sizeTxt16"/>

                    <!--Cardview data Tender-->
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="@dimen/padding5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/padding5"
                                    android:textSize="@dimen/sizeTxt15"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/mm"
                                    android:text="Tanggal Tender"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_tanggaldetailtender"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/padding5"
                                    android:fontFamily="@font/mm"
                                    android:text="budi"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sizeTxt16" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_statusTender"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/sizeTxt15"
                                android:textColor="@color/black"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:fontFamily="@font/mm"
                                android:text="Status"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <!--cardview dataTender selesai-->

                    <View style="@style/Divider"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/padding5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding5"
                        android:fontFamily="@font/mm"
                        android:gravity="center"
                        android:text="Data Laporan"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sizeTxt16" />
                </LinearLayout>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding5"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:padding="@dimen/padding5"
                        android:fontFamily="@font/mm"
                        android:id="@+id/rv_listTenderDetail">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </ScrollView>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/padding5">

                <Button
                    android:id="@+id/btn_addlaporan"
                    android:layout_width="320dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bgbtnguide"
                    android:fontFamily="@font/mm"
                    android:text="Proses"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
</LinearLayout>